<% layout("./layouts/boilerplate") %>
<h2 class="offset-4">Sign-up on Wanderlust</h2>

<div class="row mt-3">
    <div class="col-4 offset-4">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input placeholder="" type="text" name="username" id="username"
                    class="form-control" required>
                <div class="valid-feedback">Ok!</div>
                <div class="invalid-feedback">Username Required</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email-id</label>
                <input placeholder="" type="text" name="email" id="email"
                class="form-control" required>
                    <div class="invalid-feedback"> Email-id Required</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">password</label>
                <input placeholder="" type="password" name="password" id="password"
                class="form-control" required>
                    <div class="invalid-feedback">Password Required</div>
            </div>
            <button class="btn btn-success">Register</button>
        </form>
</div>
</div>